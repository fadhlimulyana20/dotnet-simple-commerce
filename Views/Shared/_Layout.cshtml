<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Simple Commerve</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/dotnet_mvc.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
    <header>
        <div x-data="navbar">
            <div id="navbar-transparent-wrapper"
                class="fixed left-0 top-0 z-40 w-full transition-all duration-300 bg-white shadow-md">
                <div
                    class="flex container mx-auto xl:max-w-screen-xl lg:max-w-screen-lg justify-between items-center px-4 py-2">
                    <a href="/">
                        <h5 class="text-xl font-bold">Simple</h5>
                        <h5 class="text-xl font-bold">Commerce</h5>
                    </a>
                    <!-- Navbar links for larger screens -->
                    <div id="nav-wrapper" class="hidden lg:flex gap-x-4 font-medium text-gray-700">
                        <a href=""
                            class=" text-green-700 font-medium hover:text-green-400">
                            Product
                        </a>
                        <a href=""
                            class=" text-green-700 font-medium hover:text-green-400">
                            Chart
                        </a>
                    </div>  
                </div>
            </div>
        </div>
    </header>
    <div class="min-h-screen">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800">
        <div class="container xl:max-w-screen-xl lg:max-w-screen-lg px-4 mx-auto py-10">
            <div class="grid lg:grid-cols-6 grid-cols-2 gap-2">
                <div class="col-span-2">
                    <div class="text-yellow-200 text-xl font-bold">
                        <h5 class="mb-0">Simple</h5>
                        <h5>Commerce</h5>
                    </div>
                    <p class="text-white">Offering top-quality products at unbeatable prices.</p>
                </div>
            </div
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
