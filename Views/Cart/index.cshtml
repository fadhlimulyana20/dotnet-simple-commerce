@model dotnet_mvc.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Cart List";
}

<div class="pt-24 bg-gray-100 min-h-screen">
    <div class="container xl:max-w-screen-xl lg:max-w-screen-lg px-4 mx-auto">
        <h1 class="text-3xl font-bold mb-5">Cart List</h1>
        <div class="grid md:grid-cols-8 gap-10">
            <div class="md:col-span-6">
                @foreach (var cart in Model.CartItems)
                {
                <div class="bg-white py-3 px-5 rounded-lg border border-gray-200 mb-4">
                    <h5 class="text-md font-bold mb-2"></h5>
                    <div class="flex justify-between">
                        <div class="flex gap-4 mb-4">
                            <img src="@cart.ImgUrl" alt="product image" class="w-24" height="100"
                                width="100">
                            <div>
                                <p class="text-lg">@cart.ProductName</p>
                                <p class="text-md text-gray-500">@cart.ProductSku</p>
                            </div>
                        </div>
                        <div>
                            <p class="text-lg font-medium">@(cart.Quantity * cart.Price)</p>
                            <div class="flex justify-end gap-4">
                                <button class="text-gray-600 hover:bg-gray-200 rounded-lg px-2">Hapus</button>
                                <input type="number" class="w-16 border border-gray-200 rounded-lg py-1 px-2"
                                    value="@cart.Quantity" />
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="md:col-span-2">
                <div class="bg-white p-3 rounded-lg border border-gray-200 sticky top-24">
                    <h5 class="font-bold text-lg mb-4">Ringkasan Belanja</h5>
                    <div class="flex justify-between items-center mb-2">
                        <p class="text-gray-500 text-sm">Total</p>
                        <p>@Model.TotalBill</p>
                    </div>
                    <hr class="mb-2" />
                    <button class="w-full px-2 py-2 rounded-full bg-yellow-500 hover:bg-yellow-600 font-medium">Beli</button>
                </div>
            </div>
        </div>
    </div>
</div>